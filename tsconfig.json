{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "strict": true,
    "noImplicitAny": true,
    "diagnostics": false,
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "pretty": true,
    "incremental": true,
    "outDir": "build",
    "baseUrl": "src"
  },
  "include": [
    "src/index.ts",
    "src/assets/*.ts",
    "src/catalog/*.ts",
    "src/cid/*.ts",
    "src/description/*.ts",
    "src/upload/*.ts"
  ],
  "exclude": ["**/assets/**/*", "*.swp", "**/dist/**/*", "**/build/**/*", "**/node_modules/**/*"]
}
