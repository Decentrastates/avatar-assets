{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable"],
    "downlevelIteration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noEmit": false,
    "noUnusedLocals": true,
    "pretty": true,
    "incremental": true,
    "outDir": "build",
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "old", "node_modules"]
}
